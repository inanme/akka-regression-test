root = true

# Standard settings
[*]
indent_style = space
end_of_line = lf
insert_final_newline = true
charset = utf-8
max_line_length = 120
trim_trailing_whitespace = true
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2
